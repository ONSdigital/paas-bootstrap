{
    "Version": "2012-10-17",
    "Statement": [{
      "Effect": "Allow",
      "Action": [ "s3:*" ],
      "Resource": [
        "arn:aws:s3:::${environment}-cf-buildpacks",
        "arn:aws:s3:::${environment}-cf-droplets",
        "arn:aws:s3:::${environment}-cf-packages",
        "arn:aws:s3:::${environment}-cf-resource-pool",
        "arn:aws:s3:::${environment}-cf-buildpacks/*",
        "arn:aws:s3:::${environment}-cf-droplets/*",
        "arn:aws:s3:::${environment}-cf-packages/*",
        "arn:aws:s3:::${environment}-cf-resource-pool/*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "kms:Decrypt",
        "kms:Encrypt",
        "kms:DescribeKey",
        "kms:GenerateDataKey"
      ],
      "Resource": [
        "${cf_blobstore_kms_key_arn}"
      ]
    }
  ]
  }
