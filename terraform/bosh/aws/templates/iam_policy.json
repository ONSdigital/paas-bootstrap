{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "ec2:RunInstances"
      ],
      "Resource": [
        "arn:aws:ec2:${region}:${account_id}:instance/*"
      ],
      "Condition": {
        "StringEquals": {
          "ec2:Region": "${region}"
        }
      }
    }
  ]
}